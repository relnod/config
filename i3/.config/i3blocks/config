[volume]
label=V:
command=~/.config/i3blocks/volume
interval=repeat

[mediaplayer]
label=â™«
command=~/.config/i3blocks/mediaplayer
interval=5

[battery]
label=B:
command=~/.config/i3blocks/battery
interval=1

[wireless]
label=W:
instance=wlan0
command=~/.config/i3blocks/iface
interval=60

[ethernet-eth0]
label=E:
instance=eth0
command=~/.config/i3blocks/iface
interval=60

[ethernet-eno1]
label=E:
instance=eno1
command=~/.config/i3blocks/iface
interval=60

[bandwidth]
command=~/.config/i3blocks/bandwidth
interval=1
min_width=100
align=center

[cpu_usage]
label=C:
command=~/.config/i3blocks/cpu_usage
interval=1

[uptime]
label=U:
command=uptime | sed -E 's/^[^,]*up *//; s/, *[[:digit:]]* user.*//'
interval=60

[time]
command=date "+%A %d.%m.%g %T"
interval=1
