command=~/.config/i3blocks/volume
interval=repeat

[mediaplayer]
label=â™«
command=~/.config/i3blocks/mediaplayer
interval=10

[battery]
label=B:
command=/usr/lib/i3blocks/battery
interval=1

[wireless]
label=W:
instance=wlan0
command=~/.config/i3blocks/iface
interval=60

[ethernet]
label=E:
instance=eth0
command=~/.config/i3blocks/iface
interval=60

[bandwidth]
command=~/.config/i3blocks/bandwidth
interval=1
min_width=100
align=center

[cpu_usage]
label=C:
command=/usr/lib/i3blocks/cpu_usage
interval=1

[uptime]
command=uptime | sed -E 's/^[^,]*up *//; s/, *[[:digit:]]* user.*//'
interval=1

[time]
command=date "+%A %d.%m.%g %T"
interval=1
