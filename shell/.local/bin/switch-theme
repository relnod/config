#!/bin/bash

[ ! -f ~/.theme ] && echo dark > ~/.theme

CURRENT_THEME=$(cat ~/.theme)

if [[ "$CURRENT_THEME" == "dark" ]]; then
    echo "here"
    echo light > ~/.theme
    sed -i --follow-symlinks 's/*dark/*light/g' ~/.config/alacritty/alacritty.yml
    sed -i --follow-symlinks 's/background=dark/background=light/g' ~/.config/nvim/init.vim
fi

if [[ "$CURRENT_THEME" == "light" ]]; then
    echo "there"
    echo dark > ~/.theme
    sed -i --follow-symlinks 's/*light/*dark/g' ~/.config/alacritty/alacritty.yml
    sed -i --follow-symlinks 's/background=light/background=dark/g' ~/.config/nvim/init.vim
fi
